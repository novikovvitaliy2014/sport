.footer
  display: flex
  position: relative
  font-family: $font-base
  z-index: 3
  background-color: #ffffff
  background-color: $brown
  border-top: 1px solid $color-dark
  margin-top: auto
  height: 50px
.footer__content
  container()
  display: flex
  justify-content: space-between
  margin-right: auto
  p
    display: block
    align-self: center
    width: $col-9
    color: $color-dark
    font-weight: 400
    text-align: center
    margin-bottom: 0
